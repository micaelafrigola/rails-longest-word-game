<h1>New game</h1>
<div class = "cards">
<% @letters.each do |letter| %>
  <li class = "card-blue"><%= letter %></li>
  <%end%>
</div>

<label for="">What is the longest word you can find?</label>
<form action="/score" method="post" data-turbo="false">

  <input type="text" name="word">
  <input type="hidden"  name="letters" value= "<%= @letters %>"  >
  <input type="submit" value="your word">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
